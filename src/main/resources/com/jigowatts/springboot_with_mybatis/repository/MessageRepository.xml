<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jigowatts.springboot_with_mybatis.repository.MessageRepository">
    <select id="findOne" parameterType="int" resultType="com.jigowatts.springboot_with_mybatis.domain.model.Message">
        SELECT
            id,
            text
        FROM
            messages
        WHERE
            id = #{id}
    </select>

    <select id="count" resultType="_long">
        SELECT COUNT(*) FROM messages
    </select>

    <select id="findAll" resultType="com.jigowatts.springboot_with_mybatis.domain.model.Message">
        SELECT
            id,
            text
        FROM
            messages
        ORDER BY
            id
    </select>

    <insert id="create" parameterType="com.jigowatts.springboot_with_mybatis.domain.model.Message" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO messages(text) VALUES(#{text})
    </insert>

    <update id="update" parameterType="com.jigowatts.springboot_with_mybatis.domain.model.Message">
        UPDATE messages SET
            text = #{text}
        WHERE
            id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM messages
        WHERE
            id = #{id}
    </delete>
</mapper>